{
    "plugins": [
        "meteor"
    ],
    "extends": [
        "airbnb",
        "plugin:meteor/recommended"
    ],
    "settings": {
        "import/resolver": "meteor"
    },
    "rules": {
        "import/no-unresolved": 0,
        "indent": [
            "error",
            4
        ],
        "semi": [
            2,
            "never"
        ],
        "prefer-arrow-callback": 2,
        "arrow-body-style": 0,
        "object-shorthand": 0,
        "comma-dangle": 0,
        "no-underscore-dangle": 0,
        "func-names": 0,
        "consistent-return": 0,
        "no-else-return": 0,
        "space-before-function-paren": 0,
        "prefer-template": 0,
        "prefer-const": 0,
        "no-shadow": 0,
        "no-param-reassign": 0,
        "vars-on-top": 0,

        # Because its a demo
        "no-warning-comments": 0,
        "no-console": 0,

        # Meteor specific rules
        "meteor/no-session": 0,
        "meteor/template-names": 0,

        # React rules
        "react/jsx-curly-spacing": 0,
        "react/jsx-indent": [2, 4]

    }
}
